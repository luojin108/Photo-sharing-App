<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_preview_image_appbar"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_preview_image_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:navigationIcon="@drawable/back_arrow"
            android:background="@color/albumSheetBottom"
            app:contentInsetStart="0dp">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_preview_image_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/activity_preview_image_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/albumSheetBottom"
        android:layout_gravity="bottom">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/activity_preview_image_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="@string/preview_select_text"
            android:textSize="20sp"
            android:textColor="@color/radio_button_tint"
            android:buttonTint="@color/radio_button_tint"
            android:clickable="false"
            android:focusable="false"/>
        <View
            android:id="@+id/activity_preview_image_check_box_mask"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"/>


    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>