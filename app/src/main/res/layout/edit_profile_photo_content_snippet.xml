<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/edit_profile_photo_recycler_view"
        style="@style/width_matchParent_height_wrapContent"
        android:layout_below="@id/activity_edit_profile_photo_app_bar_layout"
        android:layout_marginBottom="45dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/albumSheetBottom">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_photo_switch_dir_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableEnd="@drawable/album_abc_spinner_white"
            android:drawableRight="@drawable/album_abc_spinner_white"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>
</merge>