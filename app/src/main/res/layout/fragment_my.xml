<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/my_fragment_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/my_fragment_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_my_background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.mytips.widgets.SquareCircleImageView
                    android:id="@+id/fragment_my_circle_view"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginTop="130dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/white"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/my_fragment_name_text"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_below="@id/fragment_my_circle_view"
                    android:layout_alignStart="@id/fragment_my_circle_view"
                    android:layout_alignLeft="@id/fragment_my_circle_view"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragment_my_description_text"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_below="@id/my_fragment_name_text"
                    android:layout_alignStart="@id/my_fragment_name_text"
                    android:layout_alignLeft="@id/my_fragment_name_text"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="25dp"
                    android:weightSum="3">
                    <RelativeLayout
                        android:layout_marginStart="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_follower_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:text="@string/followers"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_follower_num"
                            android:layout_width="fill_parent"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/fragment_my_follower_text"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/fragment_my_follower_text" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_following_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:text="@string/followings"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_following_num"
                            android:layout_width="fill_parent"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/fragment_my_following_text"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/fragment_my_following_text" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_liked_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:text="@string/Liked"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fragment_my_liked_num"
                            android:layout_width="fill_parent"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_height="20dp"
                            android:layout_toRightOf="@id/fragment_my_liked_text"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_toEndOf="@id/fragment_my_liked_text" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_fragment_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">
                <TextView
                    android:id="@+id/my_fragment_main_title"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/fragment_my_tab"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/orange"
            app:tabSelectedTextColor="@color/black"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="@color/dark_gray" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </androidx.viewpager.widget.ViewPager>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/fragment_my_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        style="@style/SpinKitView.Large.Circle"
        app:SpinKit_Color="@color/orange"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>