<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginLeft="30dp">
    <com.example.mytips.widgets.SquareCircleImageView
        android:id="@+id/comment_reply_item_profile_photo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/comment_reply_item_profile_photo"
        android:layout_toEndOf="@+id/comment_reply_item_profile_photo"
        android:layout_toLeftOf="@id/comment_reply_item_linear_layout"
        android:layout_toStartOf="@id/comment_reply_item_linear_layout">
        <TextView
            android:id="@+id/comment_reply_item_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="temp"
            android:textColor="@color/dark_gray"/>
        <TextView
            android:id="@+id/comment_reply_item_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="temp"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_reply_item_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="7dp"
                app:anim_scale_factor="0"
                android:id="@+id/comment_reply_item_like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="temp"/>
    </LinearLayout>
</RelativeLayout>