<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_post_view_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_post_view_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_post_view_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/back_arrow">
            <com.example.mytips.widgets.SquareCircleImageView
                android:id="@+id/activity_post_view_author_profile_photo"
                android:layout_width="36dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_post_view_author_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/activity_post_view_follow_button"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_shape"
                    android:text="@string/follow_button"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                  android:layout_toLeftOf="@id/activity_post_view__more_option_icon"
                    android:layout_centerVertical="true"/>
                <ImageButton
                    android:id="@+id/activity_post_view__more_option_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/more_options_icon"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_post_view_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_post_view_appbar"
        android:layout_above="@+id/activity_post_view_linear_layout2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/activity_post_view_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true">
                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/activity_post_view_imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:sliderAutoCycleEnabled="false"
                    app:sliderCircularHandlerEnabled="false"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="@color/orange"
                    app:sliderIndicatorUnselectedColor="@color/dark_gray"
                    app:sliderStartAutoCycle="false" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/activity_post_view_linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/activity_post_view_frame_layout">
                <LinearLayout
                    android:id="@+id/activity_post_view_post_content_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/activity_post_view__title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/activity_post_view__description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:id="@+id/activity_post_view__time_posted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dark_gray"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/activity_post_view_comment_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="temp"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <com.example.mytips.post.MyExpandableListView
                android:id="@+id/activity_post_view_comment_expandable_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/activity_post_view_linear_layout1"
                android:scrollbars="none"
                android:divider="@null"
                android:listSelector="@drawable/comment_list_selector_transparent"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/activity_post_view_linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/activity_post_view_comment_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.62"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_box_background"
            android:gravity="center"
            android:hint="@string/comment_box_hint"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/dark_gray"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true" />
        <LinearLayout
            android:id="@+id/activity_post_view_linear_layout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/activity_post_view_linear_layout4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <com.like.LikeButton
                    app:icon_type="heart"
                    app:icon_size="7dp"
                    app:anim_scale_factor="0"
                    android:id="@+id/activity_post_view_like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/activity_post_view_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_post_view_linear_layout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/activity_post_view_comment_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/comment_bubble"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
            <TextView
                android:id="@+id/activity_post_view_comment_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/activity_post_view_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        style="@style/SpinKitView.Large.Circle"
        app:SpinKit_Color="@color/orange"/>
</RelativeLayout>